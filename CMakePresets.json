{
	"version": 3,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 19,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "wsl-debug",
			"description": "Debug build on WSL2",
			"binaryDir": "${sourceDir}/build",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug",
				"CMAKE_C_COMPILER": "/usr/bin/gcc",
				"CMAKE_CXX_COMPILER": "/usr/bin/g++"
			}
		},
		{
			"name": "wsl-release",
			"description": "Release build on WSL2",
			"binaryDir": "${sourceDir}/build",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"CMAKE_C_COMPILER": "/usr/bin/gcc",
				"CMAKE_CXX_COMPILER": "/usr/bin/g++"
			}
		}
	],
	"buildPresets": [
		{
			"name": "build-debug",
			"configurePreset": "wsl-debug"
		},
		{
			"name": "build-release",
			"configurePreset": "wsl-release"
		}
	],
	"testPresets": [
		{
			"name": "test-debug",
			"configurePreset": "wsl-debug"
		}
	]
}
